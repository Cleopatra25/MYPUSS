<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorWhite</item>
    </style>
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Loadingâ€¦</item>
        <item name="DialogSpotColor">@android:color/holo_blue_light</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="srb_fillColor">@color/colorPrimary</item>
        <item name="srb_borderColor">@color/colorPrimary</item>
        <item name="srb_numberOfStars">5</item>
        <item name="srb_stepSize">0.5</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/text_margin</item>
        <item name="android:layout_marginRight">@dimen/text_margin</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Headline">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ImageBody">
        <item name="android:tint">@color/colorBlack</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="SubHeading">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:alpha">0.87</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
