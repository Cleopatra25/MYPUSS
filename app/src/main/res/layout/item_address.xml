<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_address"
    android:orientation="vertical"
    android:padding="@dimen/smed_padding"
    android:background="@drawable/ripple_effect_nearwhite"
    android:clickable="true">

    <com.an.customfontview.CustomTextView
        app:textFontPath="fonts/popinregural.otf"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/full_address"
        android:textColor="@color/colorBlack87"
        tools:text="Jl Guntur no 9, Babakan Bogor Tengah, Kota Bogor, Jawa Barat, Indonesia. 16610"/>


    <com.an.customfontview.CustomTextView
        app:textFontPath="fonts/popinbold.otf"
        android:layout_height="30dp"
        android:layout_width="80dp"
        android:id="@+id/editaddress"
android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:layout_gravity="end"

        android:gravity="center"
        android:background="@color/colorPrimary"
android:text="Edit"  />
    <TextView
        android:id="@+id/add_delete_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xmin_padding"
        android:padding="@dimen/xmin_padding"
        android:background="@drawable/ripple_effect_nearwhite"
        android:text="Delete"
        android:layout_gravity="end"
        android:visibility="gone"
        android:textColor="@color/colorBlack87"
        />

</LinearLayout>