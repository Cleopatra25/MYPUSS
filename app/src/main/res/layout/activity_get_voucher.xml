<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_get_voucher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.rentist.rentist.activity.GetVoucher"

    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"

            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:layout_margin="10dp"
                android:padding="3dp"
                android:visibility="gone"
                android:hint="Search Voucher ..."




                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/poinnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="1000  Credits"
                    android:textColor="#fff"

                    android:textSize="30dp"
                    android:textStyle="bold" />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >


    <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bulet" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:textColor="#fff"

        />
</RelativeLayout>

            </LinearLayout>


</LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/pagekosong"

        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:src="@drawable/avadefault"
            android:layout_gravity="center"
            />

        <com.an.customfontview.CustomTextView
            app:textFontPath="fonts/gotham_bold.otf"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/slight_margin"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:text="We are sorry "
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            />

        <com.an.customfontview.CustomTextView
            app:textFontPath="fonts/gothammediums.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/slight_margin"
            android:gravity="center"
            android:text="No vouchers are available"
            android:textSize="13dp"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/pagelinear"
        >
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:visibility="gone"

            >

        </android.support.v4.widget.SwipeRefreshLayout>

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"

            />

    </LinearLayout>


    </LinearLayout>



