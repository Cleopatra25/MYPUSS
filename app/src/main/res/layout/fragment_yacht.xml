<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.rentist.rentist.fragment.YachtFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_margin"
        android:layout_marginRight="@dimen/text_margin"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="vertical">
        <EditText
            android:id="@+id/intro_start_rent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_date_grey"
            android:gravity="right|center_vertical"
            android:editable="false"
            android:layout_marginTop="@dimen/text_margin"
            android:hint="Start Rent"
            android:textDirection="ltr"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_search_yacht"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin"
            android:background="@color/colorPrimaryDark"
            android:drawableStart="@drawable/i_yacht"
            android:padding="12dp"
            android:text="Search"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</FrameLayout>
