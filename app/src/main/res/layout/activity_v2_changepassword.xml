<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_back_activity"
    tools:context="id.rentist.rentist.activity.V2Changepassword">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_alignParentLeft="true"

                android:src="@drawable/ic_left_arrow"
                android:id="@+id/backimage" />


        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/ic_back_frame"
        android:padding="30dp"

        >

<ImageView
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_back_activation"
    
    />

        <com.an.customfontview.CustomTextView
            app:textFontPath="fonts/popinbold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:text="C H A N G E   P A S S W O R D"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"


            />
        <com.an.customfontview.CustomTextView
            app:textFontPath="fonts/popinregural.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Please Enter your current password and your new password"
            android:textColor="@color/colorBlack87"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="13dp"


            />




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

         

            android:layout_marginTop="25dp">

            <com.an.customfontview.CustomEditText
                android:id="@+id/currenttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/colorone"
                android:hint="C U R R E N T  P A S S W O R D"
                android:inputType="textPassword"
                android:textColor="@color/colortree"
                android:textColorHint="@color/colorone"

                android:textSize="13dp"
                app:textFontPath="fonts/popinmedium.otf" />

            <ImageView
                android:id="@+id/hidecurrent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_eye" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            android:layout_marginTop="25dp">

            <com.an.customfontview.CustomEditText
                android:id="@+id/newtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/colorone"
                android:hint="N E W   P A S S W O R D"
                android:inputType="textPassword"
                android:textColor="@color/colortree"
                android:textColorHint="@color/colorone"

                android:textSize="13dp"
                app:textFontPath="fonts/popinmedium.otf" />

            <ImageView
                android:id="@+id/hidenew"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_eye" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"



            android:layout_marginTop="25dp">

            <com.an.customfontview.CustomEditText
                android:id="@+id/confirmtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:backgroundTint="@color/colorone"
                android:hint="C O N F I R M  P A S S W O R D"
                android:inputType="textPassword"
                android:textColor="@color/colortree"
                android:textColorHint="@color/colorone"

                android:textSize="13dp"
                app:textFontPath="fonts/popinmedium.otf" />

            <ImageView
                android:id="@+id/hideconfirm"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_eye" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="30dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:padding="5dp"
            android:id="@+id/linkchange"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <com.an.customfontview.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:text="CONFIRM"
                    android:textColor="@color/colorWhite"

                    android:textSize="16dp"
                    app:textFontPath="fonts/popinbold.otf"


                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>




    </LinearLayout>













</RelativeLayout>
