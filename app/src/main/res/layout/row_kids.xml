<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_search_asset"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_mobil" />


            <com.an.customfontview.CustomTextView
                android:layout_width="match_parent"
                android:id="@+id/txt_search_price"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:text="Rp 300.00000"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp"
                app:textFontPath="fonts/gotham_bold.otf"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">

                <com.an.customfontview.CustomTextView
                    android:id="@+id/txt_search_name"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Brio"
                    android:textColor="#000"
                    android:textSize="15dp"
                    app:textFontPath="fonts/gotham_bold.otf"

                    />


                <com.an.customfontview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:text="|"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:visibility="gone"
                    app:textFontPath="fonts/gothamxlight.otf" />

                <com.an.customfontview.CustomTextView
                    android:id="@+id/brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:text="Honda"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:visibility="gone"
                    app:textFontPath="fonts/gothamxlight.otf"

                    />


            </LinearLayout>

            <com.an.customfontview.CustomTextView
                android:id="@+id/txt_search_subcat"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="City car, 2017"
                android:textColor="@color/colorPrimary"
                android:textSize="13dp"
                app:textFontPath="fonts/gothamxlight.otf"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:visibility="invisible"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/seat" />

                <com.an.customfontview.CustomTextView
                    android:id="@+id/seat"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="3dp"
                    android:text="12"
                    android:textSize="10dp"
                    app:textFontPath="fonts/gothamxlight.otf" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/transmition" />


                <com.an.customfontview.CustomTextView
                    android:id="@+id/transmition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="automatc"
                    android:textSize="10dp"
                    app:textFontPath="fonts/gothamxlight.otf" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:visibility="invisible"
                    android:src="@drawable/egine" />

                <com.an.customfontview.CustomTextView
                    android:id="@+id/egine"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginLeft="5dp"
                    android:text="100cc"
                    android:textSize="10dp"

                    app:textFontPath="fonts/gothamxlight.otf" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:src="@drawable/marker" />

                <com.an.customfontview.CustomTextView
                    android:id="@+id/jarak"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="5dp"
                    android:text="100cc"
                    android:textColor="@color/colorPrimary"
                    android:textSize="10dp"
                    app:textFontPath="fonts/gothamxlight.otf" />


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/btn_search_cart"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="-10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#99e52c"
                app:cardUseCompatPadding="true"

                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_cart"

                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="Add To Cart"
                        android:id="@+id/labelcart"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>


    </LinearLayout>




</android.support.v7.widget.CardView>