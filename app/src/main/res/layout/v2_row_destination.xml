<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            >
        <com.an.customfontview.CustomTextView
            app:textFontPath="fonts/popinbold.otf"
            android:layout_width="wrap_content"
android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="Bali -Raja empat"
            android:textColor="@color/colorPrimary"
            android:textSize="16dp"
            android:id="@+id/name_value"


            />


            <com.an.customfontview.CustomTextView
                app:textFontPath="fonts/popinregural.otf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="valid date : 2017-17-18 / 2018-1980-189"
                android:textColor="@color/grey_medium"
                android:textSize="13dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/date_value"


                />
        </LinearLayout>

       <android.support.v7.widget.CardView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:elevation="4dp"
           app:cardUseCompatPadding="true"
           app:cardBackgroundColor="@color/green"
           android:layout_margin="10dp"
           android:id="@+id/button_value"
           >

           <com.an.customfontview.CustomTextView
               app:textFontPath="fonts/popinregural.otf"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_centerInParent="true"
               android:layout_margin="5dp"
               android:text="Buy Now"
               android:textColor="@color/colorWhite"
               android:textSize="13dp"


               />

       </android.support.v7.widget.CardView>



    </LinearLayout>

    <com.an.customfontview.CustomTextView
        app:textFontPath="fonts/popinregural.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:text="Destination package trow you on the bottom of hell please dont scare ist your fauolt"
        android:textColor="@color/colorBlack87"
        android:textSize="13dp"
        android:id="@+id/description_value"


        />
    <com.an.customfontview.CustomTextView
        app:textFontPath="fonts/popinregural.otf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:text="Destination package trow you on the bottom of hell please dont scare ist your fauolt"
        android:textColor="@color/colorBlack87"
        android:textSize="13dp"
        android:id="@+id/id_value"


        />
    <com.an.customfontview.CustomTextView
        app:textFontPath="fonts/popinbold.otf"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:text="Rp 950.000 / day"
        android:textColor="@color/colorPrimary"
        android:textSize="18dp"
        android:id="@+id/price_value"




        />
</LinearLayout>