                        android:layout_height="wrap_content"
                        android:text="Yacht Type"
                        android:textColor="@color/colorTextBlue"
                        android:textSize="@dimen/small_text"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/med_padding"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/min_padding"
                        android:paddingStart="@dimen/min_padding">

                        <TableRow>

                            <CheckBox
                                android:id="@+id/sport"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Modern"/>

                            <CheckBox
                                android:id="@+id/bigbike"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Traditional" />

                        </TableRow>

                        <TableRow>

                            <CheckBox
                                android:id="@+id/harley"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Others" />

                            <CheckBox
                                android:id="@+id/scooter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:maxHeight="50dp"
                                android:visibility="invisible"
                                android:text="Moonarch"/>

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

