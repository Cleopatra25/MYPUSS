<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lyt_thread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorWhite">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin">

            <TextView
                android:id="@+id/trans_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="03 Jul 2017, 09:28 PM"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>
            <View
                style="@style/Divider"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:id="@+id/start_rent_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start Rent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/trans_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="18 Jul 2017, 12:00 PM"
                        android:textColor="@color/colorBlack"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/end_rent_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="End Rent"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"/>
                    <TextView
                        android:id="@+id/trans_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="20 Jul 2017, 12:00 PM"
                        android:textColor="@color/colorBlack"/>
                </TableRow>
            </TableLayout>
            <View
                style="@style/Divider"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/status_trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="On Booking"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
